{
  "name": "babel-plugin-ember-test-metadata",
  "version": "2.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:babel-plugin-ember-test-metadata/babel-plugin-ember-test-metadata.git"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "npm-run-all lint test:*",
    "test:plugin": "yarn workspace babel-plugin-ember-test-metadata test",
    "test:scenarios": "cd packages/test-scenarios && yarn test"
  },
  "devDependencies": {
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "release-it": "^14.2.1",
    "release-it-lerna-changelog": "^3.1.0",
    "release-it-yarn-workspaces": "^2.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "release-it-yarn-workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "12.22.1",
    "yarn": "1.22.10"
  }
}
